<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xstar.com.kotlintest.MainActivity">

    <EditText
        android:id="@+id/search_server_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_radius_shape"
        android:drawableLeft="@android:drawable/ic_search_category_default"
        android:drawablePadding="5dp"
        android:padding="@dimen/dp_10"
        android:text="34262319910624851"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/app_recommend_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_server_et"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_server_et"/>
</androidx.constraintlayout.widget.ConstraintLayout>
